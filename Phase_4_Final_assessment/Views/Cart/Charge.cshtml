@model Phase_4_Final_assessment.Models.Product

@{
    Layout = null;
    DateTime current_date = new DateTime();
    current_date = DateTime.Now;
    DateTime del_date = current_date.AddDays(3);
    var date = del_date.ToString("dd/MM/yyyy");
}

<html>
<head>
    <style>
        body {
            background-color: black;
        }
    </style>
    <title>Successful Payment</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <div class="card" style="width: 30rem;margin:10% auto">
        <div class="card-body" style="margin: 0 auto">
            <h5 class="card-title" style="margin-left: 30%;">Token Id:</h5>
            <p class="card-text">@ViewBag.Token</p>
        </div>
        <div class="card-body" style="margin: 0 auto">
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Image</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Sub Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.cart)
                    {
                        <tr>
                            <td>@item.product.Pname</td>
                            <td><img src="@item.product.Pimage" width="50" height="40" style="margin:20px auto;" /></td>
                            <td>$ @item.product.Price</td>
                            <td>@item.Quantity</td>
                            <td>$ @(item.product.Price*item.Quantity)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item text-success" style="margin:0 auto">Payment Successful!!!</li>
        </ul>
        <div class="card-body" style="margin:0 auto">
            <a asp-controller="Home" class="btn btn-outline-warning" asp-action="Index">Back to Home</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>
